{
    "author": "Andrew Martin Ross",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "description": "A WebExtension that redirects Deadspin.com links to the Wayback Machine archive.",
    "homepage_url": "https://github.com/AMR692/herbicide",
    "manifest_version": 2,
    "name": "Herbicide",
    "permissions": [
        "*://*.deadspin.com/*",
        "*://web.archive.org/*",
        "webRequest",
        "webRequestBlocking"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "herbicide@example.com"
        }
    },
    "version": "1.0.0"
}